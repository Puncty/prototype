<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowMetings">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Deine Treffen"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/exampleCard"
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                app:cardBackgroundColor="#E44800">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/meetingPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="10dp"
                        android:text="Ort:" />

                    <TextView
                        android:id="@+id/meetingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_below="@+id/meetingPlace"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="10sp"
                        android:text="Datum:" />

                    <TextView
                        android:id="@+id/meetingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_below="@+id/meetingDate"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="10sp"
                        android:text="Uhrzeit:" />

                    <TextView
                        android:id="@+id/meetingMembers"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_below="@+id/meetingTime"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="10sp"
                        android:text="Mitglieder:" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>